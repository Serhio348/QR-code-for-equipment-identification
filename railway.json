{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "crons": [
    {
      "name": "collect-beliot-readings",
      "schedule": "0 * * * *",
      "command": "cd /app && npm run collect-readings"
    }
  ]
}

