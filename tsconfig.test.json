{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**/*",
    "src/**/__test__/**/*",
    "src/test/**/*",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
