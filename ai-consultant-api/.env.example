# Server
PORT=3001
NODE_ENV=development

# ============================================
# AI Provider Configuration
# ============================================
# Выбор AI провайдера: 'claude' | 'gemini' | 'openai'
# При недоступности выбранного провайдера произойдёт автоматический fallback на доступный
AI_PROVIDER=gemini

# Anthropic Claude API
# Получить ключ: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
CLAUDE_MODEL=claude-sonnet-4-20250514

# Google Gemini API
# Получить ключ: https://aistudio.google.com/app/apikey
# Бесплатный tier: 15 запросов/минуту
GEMINI_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXX
GEMINI_MODEL=gemini-2.0-flash-exp

# Supabase (для проверки JWT токенов)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# GAS API URL (Google Apps Script Web App)
GAS_API_URL=https://script.google.com/macros/s/xxxxx/exec

# CORS (разделённые запятой origins)
ALLOWED_ORIGINS=http://localhost:5173
CORS_CREDENTIALS=false

# Таймауты API (мс)
API_TIMEOUT=30000
GAS_API_TIMEOUT=30000

# Retry при 5xx ошибках GAS
GAS_API_RETRY_COUNT=3

# Кэширование (секунды)
CACHE_TTL=300

# Безопасность
SESSION_SECRET=change-me-in-production

# Безопасность циклов агента
MAX_AGENT_ITERATIONS=15
